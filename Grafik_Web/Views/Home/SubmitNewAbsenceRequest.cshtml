@model IEnumerable<Grafik_Web.Models.AbsenceRequests>
@{
    ViewData["Title"] = "Submit New Absence Request";
}

<h1>Submit a new absence request</h1>
<br />
<div class="col-10">
    <div class="col-5 bg-secondary text-white d-inline-block">
        <form>
            <div class="form-group row">
                <div class="col-6 d-inline-block text-center">
                    <label for="absenceStartDate">Absence Start Date:</label>
                    <input type="date" id="absenceStartDate" name="trip-start"
                           value="2018-07-22"
                           min="2018-01-01" max="2999-12-31">
                </div>
                <div class="col-6 d-inline-block text-center">
                    <label for="absenceEndDate">Absence End Date:</label>
                    <input type="date" id="absenceEndDate" name="trip-start"
                           value="2018-07-22"
                           min="2018-01-01" max="2999-12-31">
                </div>
            </div>
            <div class="form-group row text-center">
                <label for="absenceType" class="col-sm-12 col-form-label">Absence type</label>
                <select class="custom-select col-sm-10" id="absenceType">
                    <option selected>Choose...</option>
                    <option value="1">Annual leave</option>
                    <option value="2">On demand</option>
                    <option value="3">Special Leave</option>
                </select>
            </div>
            <div class="form-group row text-center">
                <label for="absenceRequestComments" class="col-sm-12 col-form-label">Comments</label>
                <input type="text" class="form-control" placeholder="Comments..." id="absenceRequestComments" aria-label="Comments" aria-describedby="basic-addon1">
            </div>
            <div class="form-group row text-center">
                <div class="col-sm-6">
                    <button type="reset" class="btn btn-primary">Clear</button>
                </div>
                <div class="col-sm-6 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-1 bg-secondary text-white d-inline-block text-center"></div>
        <div class="col-5 bg-secondary text-white d-inline-block">
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
